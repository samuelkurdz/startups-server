{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es6"],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    
    // "rootDir": "./",
    // "outDir": "./",
    // "baseUrl": ".",
    // "paths": {
    //   "@graph/*": ["src/graphQL/*"],
    // },

    /* JavaScript files Support */
    "allowJs": true,
    "checkJs": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true
  },
}
